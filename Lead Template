    const doc = `BRIEF DE PROYECTO - FACTOR360 AI AGENCY

INFORMACIN GENERAL
Proyecto: ${briefData.projectName || '[Por completar]'}
Cliente: ${briefData.clientName || '[Por completar]'}
Industria: ${briefData.industry || '[Por completar]'}
Tipo: ${projectTypes.find(pt => pt.value === briefData.projectType)?.label}

RECURSOS
Presupuesto: ${briefData.budget || '[Por definir]'}
Timeline: ${briefData.timeline || '[Por definir]'}

OBJETIVOS
${briefData.objectives.filter(o => o).map((obj, i) => `${i + 1}. ${obj}`).join('\n') || '[Por definir]'}

AUDIENCIA
${briefData.targetAudience || '[Por definir]'}

COMPETENCIA
${briefData.competitors.filter(c => c).map((c, i) => `${i + 1}. ${c}`).join('\n') || '[Por analizar]'}

VALORES DE MARCA
${briefData.brandValues.filter(v => v).map(v => `- ${v}`).join('\n') || '[Por definir]'}

SITUACIN ACTUAL
${briefData.currentSituation || '[Por analizar]'}

RESULTADOS DESEADOS
${briefData.desiredOutcomes.filter(o => o).map((o, i) => `${i + 1}. ${o}`).join('\n') || '[Por definir]'}

ENTREGABLES
${briefData.deliverables.filter(d => d).map(d => `- ${d}`).join('\n') || '[Por definir]'}

RESTRICCIONES
${briefData.constraints || '[Ninguna especificada]'}

REFERENCIAS
${briefData.references.filter(r => r).map((r, i) => `${i + 1}. ${r}`).join('\n') || '[Sin referencias]'}

NOTAS ADICIONALES
${briefData.additionalNotes || '[Sin notas]'}

Factor360 - "No se trata de que te vean, lo importante es que te entiendan"`;

    const blob = new Blob([doc], { type: 'text/plain' });
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = `Brief_${briefData.projectName || 'proyecto'}.txt`;
    a.click();
