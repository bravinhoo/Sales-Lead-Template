import React, { useState } from 'react';
import { FileText, Users, Target, Briefcase, Download, Plus, Trash2 } from 'lucide-react';

const BriefSystem = () => {
  const [activeTab, setActiveTab] = useState('brief');
  const [briefData, setBriefData] = useState({
    projectName: '',
    clientName: '',
    industry: '',
    projectType: 'branding',
    budget: '',
    timeline: '',
    objectives: [''],
    targetAudience: '',
    competitors: [''],
    brandValues: [''],
    currentSituation: '',
    desiredOutcomes: [''],
    deliverables: [''],
    constraints: '',
    references: [''],
    additionalNotes: ''
  });

  const projectTypes = [
    { value: 'branding', label: 'Branding Completo', workflow: 'WORKFLOW 1' },
    { value: 'campaign', label: 'Campa帽a Digital', workflow: 'WORKFLOW 2' },
    { value: 'redesign', label: 'Redise帽o de Marca', workflow: 'WORKFLOW 3' },
    { value: 'consulting', label: 'Consultor铆a Estrat茅gica', workflow: 'WORKFLOW 4' }
  ];

  const agents = [
    { id: 'sales', name: 'Sales Manager', icon: '', desc: 'Gesti贸n comercial y cierre de proyectos' },
    { id: 'admin', name: 'Administrative Manager', icon: '', desc: 'Coordinaci贸n operativa y gesti贸n de proyectos' },
    { id: 'creative', name: 'Creative Director', icon: '', desc: 'Visi贸n estrat茅gica creativa y direcci贸n conceptual' },
    { id: 'designer', name: 'Designer', icon: '锔', desc: 'Ejecuci贸n visual de identidad de marca' },
    { id: 'marketing', name: 'Marketing Manager', icon: '', desc: 'Estrategia de marketing integral y posicionamiento' },
    { id: 'finance', name: 'Finance Manager', icon: '', desc: 'Gesti贸n presupuestaria, pricing y rentabilidad' },
    { id: 'social', name: 'Social Media Manager', icon: '', desc: 'Estrategia y gesti贸n de presencia en redes sociales' },
    { id: 'digital', name: 'Digital Marketing Manager', icon: '', desc: 'Estrategias digitales (SEO, SEM, conversi贸n)' },
    { id: 'prompt', name: 'Prompt Engineer', icon: '', desc: 'Optimizaci贸n de prompts para herramientas AI' }
  ];

  const handleArrayInput = (field, index, value) => {
    const newArray = [...briefData[field]];
    newArray[index] = value;
    setBriefData({ ...briefData, [field]: newArray });
