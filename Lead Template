                <h3 className="font-bold mb-3">Objetivos</h3>
                {briefData.objectives.map((obj, i) => (
                  <div key={i} className="flex gap-2 mb-2">
                    <input type="text" value={obj} onChange={(e) => handleArrayInput('objectives', i, e.target.value)} placeholder={`Objetivo ${i + 1}`} className="flex-1 p-2 border rounded" />
