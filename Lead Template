                <Download className="w-4 h-4" />
                Exportar
              </button>
            </div>

            <div className="space-y-6">
              <div className="bg-blue-50 p-4 rounded">
                <h3 className="font-bold mb-3">Informaci贸n General</h3>
                <div className="grid grid-cols-2 gap-4">
                  <input type="text" value={briefData.projectName} onChange={(e) => setBriefData({...briefData, projectName: e.target.value})} placeholder="Nombre del Proyecto" className="p-2 border rounded" />
                  <input type="text" value={briefData.clientName} onChange={(e) => setBriefData({...briefData, clientName: e.target.value})} placeholder="Cliente" className="p-2 border rounded" />
                  <input type="text" value={briefData.industry} onChange={(e) => setBriefData({...briefData, industry: e.target.value})} placeholder="Industria" className="p-2 border rounded" />
                  <select value={briefData.projectType} onChange={(e) => setBriefData({...briefData, projectType: e.target.value})} className="p-2 border rounded">
